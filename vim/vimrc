" {{{ Plugin Manager (vim-plug)
if filereadable(expand("~/.vim/vim-plugs.vim"))
  source ~/.vim/vim-plugs.vim
endif
" }}}
" Load settings {{{
if filereadable(expand("~/.vim/settings.vim"))
  source ~/.vim/settings.vim
endif
" }}}
" Default settings {{{
" Plug buffers appear in a new tab
let g:plug_window = '-tabnew'

syntax enable               " Enable syntax processing

set timeoutlen=1000
set ttimeoutlen=0

set tabstop=2               " Number of visual spaces per TAB
set shiftwidth=2
set softtabstop=2           " Number of spaces in tab when editing
set expandtab               " Tabs are spaces
set smartindent
set pastetoggle=<f10>       " Enter special mode for insert code (no indent break)

set scrolloff=6
set nolist

" Bugfix
set t_RV=

" Highlight 80 columns background
if exists('+colorcolumn')
  let &colorcolumn=join(range(81,999),",")" highlight column > 80
endif

set hidden                  " Display errors "
set encoding=utf-8          " Change output encoding in terminal "
set scrolloff=10            " Lines in view above and under the cursor "
set autoindent
set showmode
set showcmd
set visualbell
set cursorline              " Highlight cusro line "
set ttyfast
set ruler
set backspace=indent,eol,start
 set laststatus=2
set undofile
set breakindent

" Tab expansion
set wildmenu
set wildmode=full

set synmaxcol=200           " Syntaxhighlight 200 lines in load

" vims . repeat with visual mode
xnoremap . :norm.<CR

" Adjust vim size on resize
autocmd VimResized * wincmd =

" Search
set gdefault                " Search is per default global
set infercase
set incsearch               " Search as characters are entered
set hlsearch                " Highlight matches


set splitbelow
set splitright



  let mapleader=","

  nnoremap <leader><tab> :bnext<CR>




