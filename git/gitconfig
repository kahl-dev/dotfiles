[alias]
  aa      = add -A
  a       = add
  co      = checkout
  cm      = commit -m
  ca      = commit --amend
  cma     = commit --amend -m
  di      = diff
  m       = merge
  mnff    = merge --no-ff
  r       = reset
  ra      = reset .
  st      = status -sb
  p       = push
  pom     = push origin master
  poh     = push origin HEAD
  #up      = pull --rebase --autostash

  # Add git lia aliases
  l       = lia
  ls      = lia start
  lc      = lia commit
  lp      = lia preview
  lf      = lia finish

  update  = !git pull && git submodule update --init --recursive
	branchdate = "for-each-ref --count=20 --sort=-committerdate refs/remotes/origin --format=\"%(authordate:short)%09%(objectname:short)%09%(authorname)%09%1B[0;33m%(refname:short)%1B[m%09\""

[user]
  name = Patrick Kahl
  email = Kahl.Patrick@googlemail.com

[credential]
  helper = cache --timeout 228800

[push]
  default = simple

[core]
  excludesfile = ~/.gitignore_global
  editor = "if command -v 'nvim' >/dev/null 2>&1; then ED='nvim'; else ED='vim'; fi; $ED"

[init]
  templatedir = ~/.gittemplate

# Allow local customizations in the .gitconfig_local file
[include]
  path = ~/.gitconfig-local

[pager]
  # diff = diff-so-fancy | less --tabs=4 -RFXS --pattern '^(Date|added|deleted|modified): '

[submodule]
	recurse = true

[color]
	ui = true

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[url "git@github.com:"]
    insteadOf = "https://github.com/"

[pull]
	rebase = true

[rebase]
	autoStash = true

[merge]
	ff = false

[diff]
  renameLimit = 999999
