[alias]
  update  = !git pull && git submodule update --init --recursive
	branchdate = "for-each-ref --count=20 --sort=-committerdate refs/remotes/origin --format=\"%(authordate:short)%09%(objectname:short)%09%(authorname)%09%1B[0;33m%(refname:short)%1B[m%09\""
  delete-local-merged = "!git fetch && git branch --merged | egrep -v 'master|dev|main|staging'  | xargs git branch -d"
	up = pull --rebase --autostash

[user]
  name = Patrick Kahl
  email = Kahl.Patrick@googlemail.com

[credential]
  helper = cache --timeout 228800

[push]
	default = current
	followTags = true

[core]
  pager = delta
  excludesfile = ~/.gitignore_global
  editor = "if command -v 'nvim' >/dev/null 2>&1; then ED='nvim'; else ED='vim'; fi; $ED"
  compression = 0

[interactive]
  diffFilter = delta --color-only

[init]
  templatedir = ~/.gittemplate
	defaultBranch = main

# Allow local customizations in the .gitconfig_local file
[include]
  path = ~/.gitconfig-local

[pager]
  # diff = diff-so-fancy | less --tabs=4 -RFXS --pattern '^(Date|added|deleted|modified): '

[submodule]
	recurse = true

[color]
	ui = true

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[pull]
	rebase = true

[rebase]
	autoStash = true

[merge]
  conflictstyle = diff3
	ff = false

[diff]
  colorMoved = default
  renameLimit = 999999
  # tool = vimdiff

[help]
	autocorrect = 10

[fetch]
	prune = true

[web]
  browser = open

[browser "open"]
	cmd = open

[rerere]
	enabled = true

[delta]
  navigate = true    # use n and N to move between diff sections
  light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
  line-numbers = true
