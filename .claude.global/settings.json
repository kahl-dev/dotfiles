{
  "includeCoAuthoredBy": false,
  "editorMode": "vim",
  "autoAccept": true,
  "permissions": {
    "allow": [
      "Bash(make status:*)",
      "Bash(chmod:*)",
      "Bash(make:*)",
      "Bash(gunzip:*)",
      "Bash(grep:*)",
      "Bash(yarn:*)",
      "Bash(eslint:*)",
      "Bash(rg:*)",
      "Bash(yarn assign:super-admin:*)",
      "Bash(yarn sync:users:*)",
      "Bash(yarn setup:local-auth:*)",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs",
      "Bash(curl:*)",
      "Bash(yarn eslint:*)",
      "Read(*)",
      "Search(*)",
      "Edit(*)",
      "Write(*)",
      "WebFetch(domain:*)",
      "Bash(git reset:*)",
      "Bash(git add:*)",
      "Bash(git stash push:*)",
      "Bash(git commit:*)",
      "Bash(ls:*)",
      "Bash(echo $PATH)",
      "Bash(find:*)",
      "Bash(ln:*)",
      "Bash(toggl-current-issue)",
      "Bash(ln:*)",
      "mcp__*",
      "WebFetch"
    ],
    "deny": []
  },
  "mcpServers": {
    "mcp-server-figma": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-figma"],
      "env": {
        "FIGMA_API_KEY": "op://fam-kahl.1password.com/Private/figma-api/credential"
      }
    },
    "mcp-server-supabase": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-supabase"],
      "env": {
        "SUPABASE_ACCESS_TOKEN": "op://fam-kahl.1password.com/Private/supabase-api/credential",
        "READ_ONLY": "false"
      }
    },
    "mcp-server-docker": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-docker"]
    },
    "mcp-server-git": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-git"]
    },
    "mcp-server-github": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "op://fam-kahl.1password.com/Private/github-token/credential"
      }
    },
    "mcp-server-filesystem": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-filesystem"]
    },
    "mcp-server-shell": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-shell"]
    },
    "mcp-server-fetch": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-fetch"]
    },
    "mcp-server-puppeteer": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-puppeteer"]
    },
    "mcp-server-axios": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-axios"]
    },
    "mcp-server-sentry": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-sentry"],
      "env": {
        "SENTRY_AUTH_TOKEN": "op://fam-kahl.1password.com/Private/sentry-token/credential",
        "SENTRY_ORG": "lia",
        "SENTRY_URL": "https://sentry-ng.louis.info"
      }
    },
    "mcp-server-gitlab": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-gitlab"],
      "env": {
        "GITLAB_TOKEN": "op://fam-kahl.1password.com/Private/gitlab-token/credential",
        "GITLAB_URL": "https://gitlab.louis-net.de"
      }
    },
    "memory": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-memory"]
    }
  }
}
